---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import VideoList from "../components/VideoList.astro";
import VideosAds from "../components/VideosAds.astro";

//VIDEOS
import redTulum from "../media/ads/redTulum.mp4";
import defensaConsumidor from "../media/ads/defensaConsumidor.mp4";
import OSSEhorarios from "../media/ads/OSSE-horarios.mp4";
import OSSEderrochar1 from "../media/ads/OSSE-derrochar1.mp4";
import OSSEderrochar2 from "../media/ads/OSSE-derrochar2.mp4";
import OSSEcumpli from "../media/ads/OSSEcumpli.mp4";
import concursoAsador from "../media/ads/concursoAsador.mp4";
import consejoIngenieros from "../media/ads/consejoIngenieros.mp4";
import emotivoSeleccion from "../media/ads/emotivoSeleccion.mp4";
import mujeresSanas from "../media/ads/mujeresSanas.mp4";
import acompañame1 from "../media/ads/acompañame1.mp4";
import acompañame2 from "../media/ads/acompañame2.mp4";
import acompañame3 from "../media/ads/acompañame3.mp4";
import acompañame4 from "../media/ads/acompañame4.mp4";
import alientoSeleccion from "../media/ads/alientoSeleccion.mp4";
import animaAnimal from "../media/ads/animaAnimal.mp4";
import CISEM from "../media/ads/CISEM.mp4";
import Navigation from "../components/Navigation.astro";

const videosLeft = [
  { time: [new Date("11/01/2022"), new Date("11/20/2022")], ad: redTulum },
  {
    time: [new Date("11/01/2022"), new Date("11/30/2022")],
    ad: defensaConsumidor,
  },
  { time: [new Date("11/01/2022"), new Date("11/20/2022")], ad: OSSEcumpli },
  {
    time: [new Date("11/01/2022"), new Date("11/30/2022")],
    ad: OSSEderrochar1,
  },
  {
    time: [new Date("11/01/2022"), new Date("11/30/2022")],
    ad: OSSEderrochar2,
  },
  { time: [new Date("11/01/2022"), new Date("11/30/2022")], ad: OSSEhorarios },
  {
    time: [new Date("11/11/2022"), new Date("11/19/2022")],
    ad: concursoAsador,
  },
  {
    time: [new Date("11/08/2022"), new Date("11/30/2022")],
    ad: consejoIngenieros,
  },

  { time: ["11/08/2022", "11/30/2022"], ad: animaAnimal },
  { time: ["11/01/2022", "11/30/2022"], ad: CISEM },
];

const videosRight = [
  { time: ["11/09/2022", "11/30/2022"], ad: mujeresSanas },
  { time: ["11/01/2022", "11/30/2022"], ad: acompañame1 },
  { time: ["11/01/2022", "11/30/2022"], ad: acompañame2 },
  { time: ["11/01/2022", "11/30/2022"], ad: acompañame3 },
  { time: ["11/01/2022", "11/30/2022"], ad: acompañame4 },
  {
    time: ["11/16/2022", "11/30/2022"],
    ad: alientoSeleccion,
  },
  {
    time: [new Date("11/15/2022"), new Date("11/20/2022")],
    ad: emotivoSeleccion,
  },
];
---

<Layout title="Mañanas Compartidas">
  <Navigation />
  <main>
    <div class="container-grid">
      <section>
        <VideosAds videos={videosLeft} />
      </section>
      <section>
        <h2>PROGRAMAS</h2>
        <VideoList />
      </section>
      <section>
        <VideosAds videos={videosRight} />
      </section>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    /* max-width: 1200px; */
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .container-grid {
    display: grid;
    grid-template-columns: 200px 1fr 200px;
    column-gap: 1rem;
  }
</style>
